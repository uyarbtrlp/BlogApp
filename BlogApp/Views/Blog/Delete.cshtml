@model BlogApp.Context.Blog

@{
    ViewData["Title"] = "Delete";
}
    <div class="container" style="padding-top:15px;padding-bottom:585px">
        <div class="alert alert-danger"><i class="fas fa-exclamation-circle" style="margin-right:5px"></i>Silmek istediğinizden emin misiniz?</div>
        <div>
            <hr />
            <dl class="row text-white">
                <dt class="col-sm-2">
                    Başlık
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    İçerik
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Content)
                </dd>
                <dt class="col-sm-2">
                    Yayınlanan Tarih
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>

            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt" style="margin-right:5px"></i>Sil</button> |
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-alt-circle-left" style="margin-right:5px"></i>Listeye Geri Dön</a>
            </form>
        </div>

    </div>



    